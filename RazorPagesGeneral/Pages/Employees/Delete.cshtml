@page "{id}"
@model RazorPagesGeneral.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Видалення";
    ViewData["ShowButtons"] = false;
}

<h1 class="text-center" \>Підтвердження видалення</h1>

<div class="alert alert-danger">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <partial name="_DisplayEmployeePartial" model="Model.Employee" view-data="ViewData" />
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 col-xl-4 offset-sm-0 offset-md-3 offset-xl-4">
            <div class="text-center text-secondary">
                <h4> ID працівника: <span class="text-primary">@Model.Employee.Id</span></h4><hr />
                <h4> Email працівника: <span class="text-primary">@Model.Employee.Email</span></h4><hr />
                <h4> Департамент: <span class="text-primary">@Model.Employee.Department</span></h4><hr />
            </div>
        </div>
    </div>
    <div>
        <div class="row">
            <div class="col text-center">
                <h5>Ви справді бажаєте видалити користувача - @Model.Employee.Name?</h5>

                <form method="post">
                    <button type="submit" class="btn btn-danger">Так</button>
                    <a class="btn btn-success" asp-page="/Employees/Employees">Ні</a>
                </form>
            </div>
        </div>
    </div>
</div>